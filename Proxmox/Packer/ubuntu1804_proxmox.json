{
  "builders": [
    {
      "type": "proxmox",
      "proxmox_url": "https://{{user `proxmox_host`}}:8006/api2/json",
      "insecure_skip_tls_verify": true,
      "username": "{{user `proxmox_username`}}",
      "password": "{{user `proxmox_password`}}",
      "vm_name": "Ubuntu1804",
      "node": "{{user `proxmox_node`}}",
      "sockets": 1,
      "cores": 2,
      "cpu_type": "kvm64",
      "memory": 2048,
      "os": "l26",
      "network_adapters": [
        {
          "model": "virtio",
          "bridge": "{{user `proxmox_network_with_dhcp_and_internet`}}"
        }
      ],
      "disks": [
        {
          "type": "scsi",
          "disk_size": "16G",
          "storage_pool": "nvme-lvm",
          "storage_pool_type": "lvm",
          "cache_mode": "writeback",
          "format": "raw"
        }
      ],
      "vga": {
        "type": "std",
        "memory": 32
      },
      "scsi_controller": "virtio-scsi-pci",
      "iso_file": "local:iso/ubuntu-18.04.6-server-amd64.iso",
      "iso_checksum": "f5cbb8104348f0097a8e513b10173a07dbc6684595e331cb06f93f385d0aecf6",
      "http_directory": "{{template_dir}}/http",
      "http_bind_address": "192.168.3.60",
      "boot_wait": "10s",
      "boot": "order=scsi0;ide2",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US.UTF-8<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US.UTF-8<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "qemu_agent": true,
      "unmount_iso": true,
      "template_name": "Ubuntu1804",
      "template_description": "Ubuntu 18.04, generated on {{ isotime \"2006-01-02T15:04:05Z\" }}"
    }
  ],
  "provisioners": [
    {
        "pause_before": "20s",  
        "type": "shell",
        "environment_vars": [
            "HOME_DIR=/home/vagrant"
        ],
        "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
        "expect_disconnect": true,
        "scripts": [ 
            "{{template_dir}}/scripts/update.sh",
            "{{template_dir}}/_common/motd.sh",
            "{{template_dir}}/_common/sshd.sh",
            "{{template_dir}}/scripts/networking.sh",
            "{{template_dir}}/scripts/sudoers.sh",
            "{{template_dir}}/scripts/vagrant.sh",
            "{{template_dir}}/scripts/cleanup.sh"
        ]
    }
  ]
}